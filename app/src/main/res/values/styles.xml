<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btnStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/ocean_green</item>
    </style>

    <style name="loginTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="registerStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="breakfastBtn">
        <item name="android:backgroundTint">@color/ocean_green</item>
    </style>
    <style name="LunchBtn">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="dinnerBtn">
        <item name="android:backgroundTint">@color/purple_200</item>
    </style>
    <style name="extraBtn">
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>

    <style name="textInputLayout.OutlinedBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="startIconTint">#0000FF</item>
<!--        <item name="helperText">Required*</item>-->
        <item name="helperTextTextColor">@color/red</item>
<!--        <item name="counterEnabled">true</item>-->
<!--        <item name="counterMaxLength">5</item>-->
<!--        <item name="errorEnabled">true</item>-->

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



</resources>