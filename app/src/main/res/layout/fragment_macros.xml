<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragments.MacrosFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="A Breakdown of your meals' calories based on the macronutrients."
        android:padding="5dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/macros_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">
        </ImageView>

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <TableRow>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Current %"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="Ideal %"/>
            </TableRow>

            <TableRow>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    "
                    android:layout_marginTop="5dp"
                    android:background="@color/proteinRed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/row1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/row1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
            </TableRow>

            <TableRow>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    "
                    android:background="@color/carbGreen"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carbs"
                    android:padding="5dp" />
                <TextView
                    android:id="@+id/row2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/row2_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
            </TableRow>

            <TableRow>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    "
                    android:background="@color/fatYellow"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fats"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/row3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/row3_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
            </TableRow>
        </TableLayout>

    </LinearLayout>




</LinearLayout>